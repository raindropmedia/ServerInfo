<Window x:Class="ServerInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerInfo"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid x:Name="Serverinfo">
        <TextBlock HorizontalAlignment="Center" Margin="0,86,0,0" TextWrapping="Wrap" Text="Hello World" VerticalAlignment="Top" FontSize="20"/>
        <RadioButton x:Name="HelloButton" Content="Hello" HorizontalAlignment="Left" Margin="183,239,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="GoodbyeButton" Content="Goodbye" HorizontalAlignment="Left" Margin="505,239,0,0" VerticalAlignment="Top"/>
        <Button Content="Display" HorizontalAlignment="Center" Margin="0,328,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
